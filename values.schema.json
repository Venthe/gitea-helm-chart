{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "replicaCount",
        "clusterDomain",
        "image",
        "service",
        "ingress",
        "resources",
        "statefulset",
        "persistence"
    ],
    "properties": {
        "replicaCount": {
            "type": "integer"
        },
        "clusterDomain": {
            "type": "string"
        },
        "image": {
            "type": "object",
            "required": [
                "repository",
                "tag",
                "pullPolicy",
                "rootless"
            ],
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": ["Always", "IfNotPresent"]
                },
                "rootless": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "imagePullSecrets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            },
            "additionalProperties": false
        },
        "securityContext": {
            "properties": {
                "allowPrivilegeEscalation": {
                    "type": "boolean"
                },
                "capabilities": {
                    "type": "object"
                },
                "privileged": {
                    "type": "boolean"
                },
                "readOnlyRootFilesystem": {
                    "type": "boolean"
                },
                "runAsGroup": {
                    "type": "integer"
                },
                "runAsNonRoot": {
                    "type": "boolean"
                },
                "runAsUser": {
                    "type": "integer"
                }
            }
        },
        "service": {
            "required": ["http", "ssh"],
            "properties": {
                "http": {
                    "$ref": "#/properties/service/definitions/spec"
                },
                "ssh": {
                    "$ref": "#/properties/service/definitions/spec"
                }
            },
            "definitions": {
                "spec": {
                    "type": "object",
                    "required": [
                        "type",
                        "port"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["ExternalName", "ClusterIP", "NodePort", "LoadBalancer"]
                        },
                        "port": {
                            "type": "integer"
                        },
                        "clusterIP": {
                            "type": "string"
                        },
                        "loadBalancerIP": {
                            "type": "string"
                        },
                        "nodePort": {
                            "type": "string"
                        },
                        "externalTrafficPolicy": {
                            "type": "string"
                        },
                        "externalIPs": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "required": ["name"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "required": ["name"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "additionalProperties": false
                            }
                        },
                        "annotations": {
                            "type": "object"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "ingress": {
            "type": "object",
            "required": ["enabled", "hosts"],
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object"
                },
                "hosts": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": ["host", "paths"],
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": ["path", "pathType"],
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string",
                                            "enum": ["ImplementationSpecific", "Prefix", "Exact"]
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "tls": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["secretName", "hosts"],
                        "properties": {
                            "secretName": {
                                "type": "string"
                            },
                            "hosts": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "minItems": 1
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        },
        "resources": {
            "type": "object"
        },
        "schedulerName": {
            "type": "string"
        },
        "nodeSelector": {
            "type": "object"
        },
        "tolerations": {
            "type": "array"
        },
        "affinity": {
            "type": "object"
        },
        "statefulset": {
            "type": "object",
            "required": ["terminationGracePeriodSeconds"],
            "properties": {
                "env": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            },
                            "valueFrom": {
                                "type": "object"
                            }
                        },
                        "oneOf": [
                            {
                                "required": ["name", "value"]
                            },
                            {
                                "required": ["name", "valueFrom"]
                            }
                        ],
                        "additionalProperties": false
                    }
                },
                "terminationGracePeriodSeconds": {
                    "type": "integer"
                },
                "labels": {
                    "type": "object"
                }
            },
            "additionalProperties": false
        },
        "persistence": {
            "type": "object",
            "required": ["enabled"],
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "existingClaim": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "accessModes": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
                    }
                },
                "labels": {
                    "type": "object"
                },
                "annotations": {
                    "type": "object"
                },
                "storageClass": {
                    "type": "string"
                }
            },
            "if": {
                "properties": { "enabled": {"enum": [true] } }
            },
            "then": {
                "if": {
                    "properties": { "existingClaim": { "enum": [""] } }
                },
                "then": {
                    "required": ["size", "accessModes"]
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": true
}
