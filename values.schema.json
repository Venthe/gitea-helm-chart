{
    "$schema": "http://json-schema.org/draft-07/schema",
    "required": [
        "replicaCount",
        "clusterDomain",
        "image"
    ],
    "properties": {
        "replicaCount": {
            "type": "integer"
        },
        "clusterDomain": {
            "type": "string"
        },
        "image": {
            "type": "object",
            "required": [
                "repository",
                "tag",
                "pullPolicy",
                "rootless"
            ],
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": ["Always", "IfNotPresent"]
                },
                "rootless": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": true
}
